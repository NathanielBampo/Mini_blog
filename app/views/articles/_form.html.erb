<%= form_with(model: article) do |form| %>
  <%= render partial: 'partials/errors', locals: { model: article } %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <% unless current_user.present? %>
    <div>
      <%= form.label :author, style: "display: block" %>
      <%= form.text_field :author %>
    </div>
  <% end %>

  <div>
    <%= form.label :body, style: "display: block" %>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.label :datetime, style: "display: block" %>
    <%= form.datetime_field :datetime %>
  </div>

  <div class="mt-3">
    <%= form.submit 'Create', class: "btn btn-secondary" %>
  </div>
<% end %>
